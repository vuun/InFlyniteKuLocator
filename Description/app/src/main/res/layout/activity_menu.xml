<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity"
    android:id="@+id/menurelativeLayout">


    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:background="@drawable/icon_account"
        android:onClick="sendToAccount"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_below="@+id/searchButton"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/mapButton"
        android:background="@drawable/icon_map"
        android:onClick="sendToMap"
        android:layout_gravity="center_vertical"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/searchButton"
        android:background="@drawable/icon_search"
        android:onClick="sendToSearch"
        android:layout_gravity="bottom"
        android:layout_row="14"
        android:layout_column="10"
        android:layout_below="@+id/mapButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
